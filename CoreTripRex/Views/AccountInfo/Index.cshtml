@model CoreTripRex.Models.AccountInfo.AccountInfoViewModel


<div class="container py-5">
    <h1 class="h4 mb-4">Manage Your Information</h1>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="text-success mb-3">@Model.Message</div>
    }

    <div class="row g-4">

        <div class="col-lg-7">
            <div class="form-section">
                <form asp-action="Save" method="post">
                    <div class="row g-3">

                        <div class="col-md-6">
                            <label class="form-label">First Name</label>
                            <input asp-for="FirstName" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Last Name</label>
                            <input asp-for="LastName" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Phone</label>
                            <input asp-for="Phone" class="form-control" placeholder="(555) 123-4567" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="you@example.com" />
                        </div>

                        <div class="col-12">
                            <label class="form-label">Address Line 1</label>
                            <input asp-for="Address" class="form-control" />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">City</label>
                            <input asp-for="City" class="form-control" />
                        </div>

                        <div class="col-md-3">
                            <label class="form-label">State</label>
                            <input asp-for="State" class="form-control" />
                        </div>

                        <div class="col-md-3">
                            <label class="form-label">Zipcode</label>
                            <input asp-for="Zip" class="form-control" />
                        </div>

                        <div class="col-md-2">
                            <label class="form-label">Country</label>
                            <input asp-for="Country" class="form-control" />
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-primary w-100">Save Changes</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>

        <div class="col-lg-5">

            <div class="card shadow-sm mb-4 border-0">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="m-0">Saved Payment Methods</h5>

                    <button class="btn btn-sm btn-outline-primary"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#collapseAddCard"
                            aria-expanded="false">
                        Add New
                    </button>
                </div>

                <div id="collapseAddCard" class="collapse border-top">
                    <div class="card-body">
                        <form asp-action="AddPayment" method="post">
                            <div class="row g-3">

                                <div class="col-12">
                                    <label class="form-label">Card Number</label>
                                    <input asp-for="CardNumber" class="form-control" />
                                </div>

                                <div class="col-6">
                                    <label class="form-label">Exp (MM/YY)</label>
                                    <input asp-for="Expiration" class="form-control" />
                                </div>

                                <div class="col-6">
                                    <label class="form-label">Security</label>
                                    <input name="CVV" class="form-control" />
                                </div>

                                <div class="col-12">
                                    <button type="submit" class="btn btn-success w-100">Add</button>
                                </div>

                            </div>
                        </form>
                    </div>
                </div>

                @foreach (var p in Model.PaymentMethods)
                {
                    <div class="border-bottom d-flex justify-content-between align-items-center p-3">
                        <div>
                            <strong class="me-1">@p.Brand</strong>
                            <span class="text-muted">•••• @p.Last4</span>
                            <span class="text-muted small ms-1">(Exp @p.ExpMonth.ToString("D2")/@p.ExpYear)</span>

                            @if (p.IsDefault)
                            {
                                <span class="badge bg-success ms-2">Default</span>
                            }
                        </div>

                        <div class="d-flex gap-2">

                            <form asp-action="SetDefault" method="post" class="m-0 p-0">
                                <input type="hidden" name="id" value="@p.Id" />
                                <button type="submit"
                                        class="btn btn-sm btn-outline-secondary @(p.IsDefault ? "disabled" : "")">
                                    Set Default
                                </button>
                            </form>

                            <form asp-action="DeletePayment" method="post" class="m-0 p-0">
                                <input type="hidden" name="id" value="@p.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>

                        </div>
                    </div>
                }
            </div>

            <div class="accordion" id="pastTrips">
                @if (Model.PastTrips != null && Model.PastTrips.Count > 0)
                {
                    @for (var i = 0; i < Model.PastTrips.Count; i++)
                    {
                        var t = Model.PastTrips[i];
                        var headingId = $"pastTripHeading{i}";
                        var collapseId = $"pastTripCollapse{i}";

                        <div class="accordion-item">
                            <h2 class="accordion-header" id="@headingId">
                                <button class="accordion-button collapsed"
                                        type="button"
                                        data-bs-toggle="collapse"
                                        data-bs-target="#@collapseId"
                                        aria-expanded="false"
                                        aria-controls="@collapseId">
                                    @t.Title
                                </button>
                            </h2>

                            <div id="@collapseId"
                                 class="accordion-collapse collapse"
                                 aria-labelledby="@headingId"
                                 data-bs-parent="#pastTrips">
                                <div class="accordion-body">
                                    <strong>Start:</strong> @t.StartDate<br />
                                    <strong>End:</strong> @t.EndDate

                                    @* booked items *@
                                    @if (t.Items != null && t.Items.Count > 0)
                                    {
                                        <hr />
                                        <div class="small">
                                            <strong>Booked items</strong>
                                            <ul class="list-unstyled mb-0 mt-2">
                                                @foreach (var item in t.Items)
                                                {
                                                    <li class="mb-1">
                                                        <span class="fw-semibold">@item.Type</span>
                                                        @if (!string.IsNullOrEmpty(item.Name))
                                                        {
                                                            @: - @item.Name
                                                        }
                                                        @if (!string.IsNullOrEmpty(item.StartDate) || !string.IsNullOrEmpty(item.EndDate))
                                                        {
                                                            <span class="text-muted">
                                                                (@item.StartDate - @item.EndDate)
                                                            </span>
                                                        }
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-muted small p-3">No past trips found.</div>
                }
            </div>



        </div>

    </div>
</div>
