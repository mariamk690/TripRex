@model CoreTripRex.Models.Checkout.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<div class="container mt-4">
    @if (!string.IsNullOrEmpty(Model.UserGreeting))
    {
        <h2>@Model.UserGreeting</h2>
    }

    @if (Model.HasMessage)
    {
        <div class="@Model.MessageCssClass">
            @Model.Message
        </div>
    }

    @if (Model.Items != null && Model.Items.Count > 0)
    {
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Type</th>
                    <th>Dates</th>
                    <th>Qty</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.DisplayName</td>
                        <td>@item.ServiceType</td>
                        <td>@item.ComputedDates</td>
                        <td>@item.ComputedQtyLabel</td>
                        <td>$@item.ComputedTotal.ToString("F2")</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="4" class="text-end"><strong>Total</strong></td>
                    <td><strong>$@Model.Total.ToString("F2")</strong></td>
                </tr>
            </tfoot>
        </table>

        @if (!string.IsNullOrWhiteSpace(Model.ChartImageUrl))
        {
            <div class="mt-4">
                <h5>Cost breakdown by service</h5>
                <img src="@Model.ChartImageUrl"
                     alt="Cost breakdown chart"
                     class="img-fluid" />
            </div>
        }

        @if (!string.IsNullOrWhiteSpace(Model.MapImageUrl))
        {
            <div class="mt-4">
                <h5>Your route and stops</h5>

                <div class="w-100">
                    <img src="@Model.MapImageUrl"
                         alt="Trip map"
                         class="img-fluid w-100 rounded"
                         style="max-height:500px; object-fit:cover;" />
                </div>

                <div class="mt-2 text-muted small">
                    The green pin shows where you're starting, the red pin shows your destination, blue pins are hotels in your package, and orange pins are events.
                </div>

            </div>
        }

        <form asp-action="Index" method="post" class="mt-4">
            <div class="mb-3">
                <label class="form-label">
                    <input type="radio" name="AddCard" value="true" @(Model.AddCard ? "checked" : "") />
                    Use a new card
                </label>

                @if (Model.HasSavedCard)
                {
                    <label class="form-label ms-3">
                        <input type="radio" name="AddCard" value="false" @(!Model.AddCard ? "checked" : "") />
                        Use my saved card (@Model.SavedCardLabel)
                    </label>
                }
            </div>

            <div id="new-card-fields" class="border rounded p-3 mb-3">
                <div class="mb-3">
                    <label class="form-label">Card Number</label>
                    <input asp-for="CardNumber" class="form-control" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Expiration (MM/YY)</label>
                    <input asp-for="Exp" class="form-control" />
                </div>
            </div>

            <button type="submit" class="btn btn-primary">
                Confirm and Book
            </button>
        </form>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const radios = document.querySelectorAll('input[name="AddCard"]');
            const newCardFields = document.getElementById('new-card-fields');

            function updateVisibility() {
                const selected = document.querySelector('input[name="AddCard"]:checked');
                if (selected && selected.value === 'true') {
                    newCardFields.classList.remove('d-none');
                } else {
                    newCardFields.classList.add('d-none');
                }
            }

            radios.forEach(r => r.addEventListener('change', updateVisibility));
            updateVisibility();
        });
    </script>
}
