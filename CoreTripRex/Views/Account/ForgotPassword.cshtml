@model CoreTripRex.Models.RegisterSignInVM.ForgotPasswordVM

<div class="container py-4">
    <div class="card p-4 mx-auto" style="max-width: 500px;">

        <h3 class="mb-3">Reset Password</h3>

        @if (!Model.ShowQuestion)
        {
            <form method="post">
                <div class="mb-3">
                    <label>Email</label>
                    <input asp-for="Email" class="form-control" />
                </div>

                <button class="btn btn-primary w-100">Continue</button>
            </form>
        }

        @if (Model.ShowQuestion)
        {
            <form method="post">
                <input type="hidden" asp-for="Email" />
                <input type="hidden" asp-for="Question" />
                <input type="hidden" asp-for="ShowQuestion" value="true" />

                <div class="mb-3">
                    <label>Security Question</label>
                    <input asp-for="Question" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label>Your Answer</label>
                    <input asp-for="Answer" class="form-control" />
                </div>

                <button class="btn btn-success w-100">Verify Answer</button>
            </form>
        }


        <a asp-action="Login" class="mt-3 d-block">Back to login</a>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="text-danger small mt-2">
                @foreach (var e in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@e.ErrorMessage</div>
                }
            </div>
        }
    </div>
</div>
