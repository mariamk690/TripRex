<div class="container py-4">
    <div class="card p-4 mx-auto" style="max-width: 500px;">
        <h4>A password reset link has been sent to your email.</h4>

        <p class="text-muted small">
            For this project, here is your reset link:
        </p>

        <pre style="white-space: normal">@TempData["ResetLink"]</pre>

        <a asp-action="Login" class="btn btn-primary mt-3">Back to Login</a>
    </div>
</div>
