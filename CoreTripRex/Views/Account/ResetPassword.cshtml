@model CoreTripRex.Models.RegisterSignInVM.ResetPasswordVM

<div class="container py-4">
    <div class="card p-4 mx-auto" style="max-width: 500px;">
        <h3 class="mb-3">Create a New Password</h3>

        <form method="post">
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Token" />

            <div class="mb-3">
                <label>New Password</label>
                <input asp-for="NewPassword" type="password" class="form-control" />
            </div>

            <div class="mb-3">
                <label>Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
            </div>

            <button class="btn btn-success w-100">Reset Password</button>
        </form>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="text-danger small mt-2">@Model.ErrorMessage</div>
        }

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="text-success small mt-2">@Model.SuccessMessage</div>
        }
    </div>
</div>
